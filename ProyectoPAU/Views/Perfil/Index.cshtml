
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<DetalleVenta>

@section Estilos{
    <link rel="stylesheet" href="~/css/Perfil.css" />
}






    <!-- Breadcrumb -->
 
    <!-- /Breadcrumb -->

    <div class="row gutters-sm">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                        <h4>@User.Identity.Name</h4>

                        <a href="@Url.Action("editarPerfil","Perfil")" class="btn btn-outline-primary">Editar perfil</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-3">
                <ul class="list-group list-group-flush">
                 
               
                </ul>
            </div>
        </div>
   
         <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                        @ViewData["Nombre"]
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Apellido</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                        @ViewData["Apellido"]
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                        @ViewData["Email"]
                        </div>
                    </div>
                    <hr>
                
                    <hr>

                    <div class="row">
                        <div class="col-sm-9"><div class="col-sm-9 text-secondary">
                            <div class="col-sm-9 text-secondary"></>

                        </div>
                    </div>
                  
                </div>
            </div>

            </div>
        

  
   

            <div class="row gutters-sm">
                <div class="col-sm-12 mb-3">
              
                <div class="table-responsive">
                    <table class="table table-responsive table-borderless">

                        <thead>
                            <tr class="bg-light">
                       
                               
                                <th scope="col" width="20%">Producto</th>
                                <th scope="col" width="20%">Fecha</th>
                                <th scope="col" width="20%">TipoPago</th>
                                <th scope="col" width="20%">Accion</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var detalleVenta in Model)
                            {
                              <tr>
                        
                                <td>@detalleVenta.Producto.Nombre</td>
                                <td>@detalleVenta.Venta.Fecha</td>
                                <td><i class="fa fa-check-circle-o green"></i><span class="ms-1">@detalleVenta.TipoPago</span></td>
                                        <td> <a href="@Url.Action("FacturaDetalle", "Perfil", new { Venta = detalleVenta.VentaId })" class="btn btn-warning">Check offer</a>   </td>
                            
                          
                            </tr>   
                                
                            }
                           

                        </tbody>
                    </table>

                </div>



        </div>
    </div>


   
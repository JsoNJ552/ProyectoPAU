
@{
    ViewData["Title"] = "ViewCambiarEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
    <div class="container">
        <div class="row gx-lg-5 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <h1 class="my-5 display-3 fw-bold ls-tight">
                    The best offer <br />
                    <span class="text-primary">for your business</span>
                </h1>
                <p style="color: hsl(217, 10%, 50.8%)">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                    quibusdam tempora at cupiditate quis eum maiores libero
                    veritatis? Dicta facilis sint aliquid ipsum atque?
                </p>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card">
                    <div class="card-body py-5 px-md-5">
                        <form id="loginForm">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <!-- Email input -->
                            <div class="form-outline mb-3">
                                <h4>Ingrese su nuevo email </h4>

                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="text" id="email" name="email" class="form-control" />

                            </div>

                            <!-- Checkbox -->
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block mb-4">
                                Sign up
                            </button>

                            <!-- Register buttons -->

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault();

                // Obtener los valores de las contraseñas
                var email = $('#email').val();


                // Si las contraseñas coinciden, enviar el formulario
                var usuario = {
                    email: email

                };

                $.ajax({
                    url: '@Url.Action("CambiarEmail", "Perfil")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(usuario),
                    success: function (response) {
                        if (response === "Ok") {
                            Swal.fire({
                                title: 'Nuevo',
                                text: '¡Email Actualizado!',
                                icon: 'success',

                                confirmButtonText: 'OK'
                            }).then((result) => {

                                window.location.href = '@Url.Action("CerrarSesion", "Usuario")';
                            });

                        } else if (response === "El Email ya existe") {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: 'El email ya existe, intenta con otro por favor'
                            });
                        } else if (response === "bad") {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response
                            });
                        } // <-- Aquí estaba la coma extra
                    },
                    error: function (xhr, status, error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error al procesar la solicitud: ' + xhr.responseText + error + status
                        });
                    }
                });
            });
        });
    </script>
}

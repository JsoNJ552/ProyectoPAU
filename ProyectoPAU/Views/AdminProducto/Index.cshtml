@model List<ProyectoPAU.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@section Estilos{

}

<div class="container mt-5 px-2">

    <div class="mb-2 d-flex justify-content-between align-items-center">

       

        <div>
            <td class="position-relative">
                <button type="button" class="btn btn-sm btn-light"><a href="@Url.Action("Agregar","AdminProducto")" >Agregar</a> </button>
            </td>
    
        </div>

        


       

    </div>
    <div class="table-responsive">
        <table class="table table-responsive table-borderless">


          
            <thead>
                <tr class="bg-light">
              
                    <th scope="col" width="20%">Nombre</th>
                    <th scope="col" width="20%">Marca</th>
                    <th scope="col" width="20%">Precio</th>
                    <th scope="col" width="20%">Estado</th>
                    <th scope="col"  width="20%"><span>Editar</span></th>
                    <th scope="col"  width="20%"><span>Eliminar</span></th>
                </tr>
            </thead>
            <tbody>

               

                @foreach (var producto in Model)
                {
                    <tr>
                      
                        <td>@producto.Nombre</td>
                        <td><i class="fa fa-check-circle-o green"></i><span class="ms-1">@producto.Marca</span></td>
                        <td> ₡@producto.Precio</td>
                        @if(producto.Activo == true)
                        {
                            <td>Activo</td>

                        }
                        else
                        {
                            <td>Desactivado</td>
                        }
                        
                        <td class="">
                            <a asp-controller="AdminProducto" asp-action="Editar" asp-route-IdProducto="@producto.IdProducto" class="btn  btn-dark mx-1"><i class="fa fa-pencil"></i> Editar</a>
                        </td>
                        <td class="">
                            <form id="formEliminarProducto" method="post" action="@Url.Action("Eliminar", "AdminProducto")">
                                @Html.Hidden("IdProducto", producto.IdProducto)
                                <button type="submit" class="btn  btn-danger"><i class=""></i> Desactivar</button>
                            </form>
                        </td>
                    </tr>
                }
               

               
            </tbody>
        </table>

    </div>

</div>

@section Scripts{


}



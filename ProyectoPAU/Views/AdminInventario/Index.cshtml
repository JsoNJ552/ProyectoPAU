@model List<ProyectoPAU.Models.CategoriaProducto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@section Estilos {
	
	<link href="~/css/CardsAdmin.css" rel="stylesheet" />
}



<div class="row  mt-4">

	@foreach(var categorias in Model){

		<div class="col-xl-6 col-lg-12">
            <a class="text-decoration-none" asp-controller="AdminProducto" asp-action="ProductoSolo" asp-route-Name="@categorias.Nombre">
                <div class="text-decoration-none">

                    <div class="card l-bg-cherry">
                        <div class="card-statistic-5 p-5">
                            <div class="card-icon card-icon-large"><i class="fas fa-shopping-cart"></i></div>
                            <div class="mb-4">
                                <h5 class="card-title mb-0">@categorias.Nombre    </h5>
                            </div>
                            <div class="row align-items-center mb-3">
                                <div class="col-8 text-center">
                                    <h2 class="d-flex align-items-center mb-0 text''">
                                        @categorias.IdCategoria  @categorias.Nombre
                                    </h2>
                                </div>
                                <div class="col-4 text-center">
                                    <span>24h <i class="fa fa-arrow-up"></i></span>
                                </div>
                            </div>
                            <div class="progress mt-1 " data-height="8" style="height: 8px;">
                                <div class="progress-bar l-bg-cyan" role="progressbar" data-width="25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100" style="width: 25%;"></div>
                            </div>
                        </div>
                    </div>
                </div>

            </a>
           
		</div>

	}
	
	



<div class="container mt-5 px-2">

    <div class="mb-2 d-flex justify-content-between align-items-center">



        <div>
            <td class="position-relative">
                <button type="button" class="btn btn-sm btn-light"><a href="@Url.Action("RegistrarUsuario","AdminUsuario")" class="fa fa-trash">Agregar</a> </button>
            </td>

        </div>



    </div>
    <div class="table-responsive">
        <table class="table table-responsive table-borderless">

            <div class="d-flex align-items-center">
                <div class="position-relative flex-grow-1">
                    <span class="position-absolute search "><i class="fa fa-search"></i></span>
                    <input class="form-control w-50" placeholder="Search by order#, name...">
                </div>
                <button class="btn  btn-outline-dark search-btn " type="submit">Buscar</button>
            </div>
            <hr />





            <thead>
                <tr class="bg-light">

                    <th scope="col" width="20%">Nombre</th>
                    <th scope="col" width="10%">Apellido</th>
                    <th scope="col" width="20%">email</th>
                    <th scope="col" width="20%">Rol</th>

                    <th scope="col" width="20%"><span>Editar</span></th>
                    <th scope="col" width="20%"><span>Desactivar </span></th>

                    <th scope="col" width="20%"><span>Estado </span></th>
                </tr>
            </thead>
            <tbody>

                <tr>

                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>


                </tr>






            </tbody>
        </table>

    </div>

</div>


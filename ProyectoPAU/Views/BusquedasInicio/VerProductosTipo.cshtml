
@{
    ViewData["Title"] = "VerProductosTipo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ProyectoPAU.Models
@model List<ProyectoPAU.Models.Producto>


@section Estilos {
    <link rel="stylesheet" href="~/css/cards.css" />
}

<main>

    <hr />
    <div class="container mt-4">
        <div class="row">
            <div class="col-12 d-flex justify-content-center text-center">
               
               


            @foreach (var producto in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <!-- Aquí se verifica si hay una imagen para mostrar -->
                        @if (!string.IsNullOrEmpty(producto.Foto))
                        {
                            <img src="data:image/png;base64,@producto.Foto" class="card-img-top" alt="...">
                        }
                        else
                        {
                            <img src="~/images/default.png" class="card-img-top" alt="...">
                        }
                        <div class="card-body">
                            <div class="clearfix mb-3">
                                <span class="float-start badge rounded-pill bg-primary">@producto.Marca</span>
                                <span class="float-end price-hp">@producto.Precio.ToString()</span>
                            </div>
                            <h5 class="card-title">@producto.Nombre</h5>

                            @if(producto.Cantidad == 0)
                            {
                                <div class="text-center my-4">
                                    <a href="@Url.Action("ProductoDetalle", "Producto", new { idProducto = producto.IdProducto })" class="btn btn-warning">Fuera de Stock</a>
                                </div>
                            }
                            else
                            {
                                <div class="text-center my-4">
                                    <a href="@Url.Action("ProductoDetalle", "Producto", new { idProducto = producto.IdProducto })" class="btn btn-warning">Ver oferta </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-transpsarent my-4 p-3" style="position: relative;">



        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">


        </div>
    </div>

    <div id="chartdiv">
    </div>

</main>





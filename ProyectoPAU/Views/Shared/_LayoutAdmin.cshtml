@using Microsoft.AspNetCore.Authorization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <title>ShopGrids - Bootstrap 5 eCommerce HTML Template.</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="shortcut icon" type="~/image/x-icon" href="~/images/favicon.svg" />

    <!-- ========================= CSS here ========================= -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LineIcons.3.0.css" />
    <link rel="stylesheet" href="~/css/tiny-slider.css" />
    <link rel="stylesheet" href="~/css/glightbox.min.css" />
    <link rel="stylesheet" href="~/css/LayoutAdmin.css" />
    @await RenderSectionAsync("Estilos", required: false)
</head>
<body >


    <nav class="navbar navbar-expand-custom navbar-mainbg">
        <a class="navbar-brand navbar-logo" href="#">Navbar</a>
        <button class="navbar-toggler" type="button" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <i class="fas fa-bars text-white"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <div class="hori-selector"><div class="left"></div><div class="right"></div></div>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:void(0);"><i class="fas fa-tachometer-alt"></i>Dashboard</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("","AdminProducto")"><i class="far fa-address-book"></i>Productos </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="javascript:void(0);"><i class="far fa-clone"></i>Components</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","AdminUsuario")"><i class="far fa-calendar-alt"></i>Empleados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("","AdminFacturas")"><i class="far fa-chart-bar"></i>Salidas</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" ><i class="far fa-copy"></i>Tienda </a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">

            <div>
                @RenderBody()
            </div>

        </main>
    </div>
        <!-- End Header Middle -->
        

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - ProyectoPAU - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>



        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


        <script src="~/js/site.js" asp-append-version="true"></script>
         <script src="~/js/LayoutAdmin.js" asp-append-version="true"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.7/dist/sweetalert2.all.min.js" asp-append-version="true"></script>

        <script src="https://unpkg.com/unfetch/dist/unfetch.umd.js" asp-append-version="true"></script>




        @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

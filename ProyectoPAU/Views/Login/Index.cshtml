
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="">
    <!-- Jumbotron -->
    <div class="px-4 py-5 px-md-5 text-center text-lg-start" style="background-color: hsl(0, 0%, 96%)">
        <div class="container">
            <div class="row gx-lg-5 align-items-center">
                <div class="col-lg-6 mb-5 mb-lg-0">
                    <h1 class="my-5 display-3 fw-bold ls-tight">
                        The best offer <br />
                        <span class="text-primary">for your business</span>
                    </h1>
                    <p style="color: hsl(217, 10%, 50.8%)">
                        Lorem ipsum dolor sit amet consectetur adipisicing elit.
                        Eveniet, itaque accusantium odio, soluta, corrupti aliquam
                        quibusdam tempora at cupiditate quis eum maiores libero
                        veritatis? Dicta facilis sint aliquid ipsum atque?
                    </p>
                </div>

                <div class="col-lg-6 mb-5 mb-lg-0">
                    <div class="card">
                        <div class="card-body py-5 px-md-5">
                            <form id="loginForm">
                                <!-- 2 column grid layout with text inputs for the first and last names -->
                               

                                <!-- Email input -->
                                <div class="form-outline mb-4">
                                    <input type="email" id="email" name="email" class="form-control" />
                                    <label class="form-label" for="form3Example3">Email address</label>
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-4">
                                    <input type="password" id="password" name="password" class="form-control" />
                                    <label class="form-label" for="form3Example4">Password</label>
                                </div>

                                <!-- Checkbox -->
                                <div class="form-check d-flex justify-content-center mb-4">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example33" checked />
                                    <label class="form-check-label" for="form2Example33">
                                        Stay online
                                    </label>
                                </div>

                                <!-- Submit button -->
                                <button type="submit" class="btn btn-primary btn-block mb-4">
                                    Sign up
                                </button>

                                <!-- Register buttons -->
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>

@section Scripts{


    <script>
        // Manejador de eventos para el envío del formulario
        $(document).ready(function () {
            $('#loginForm').submit(function (event) {
                event.preventDefault();

                var usuario = {
                    email: $('#email').val(),
                    password: $('#password').val()
                };

                $.ajax({
                    url: '@Url.Action("Login", "Usuario")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(usuario),
                    success: function (response) {
                        // Mostrar mensaje de éxito o redirigir al usuario
                        if (response === "Credenciales correctas") {
                            // Redirigir al usuario a otra página
                            window.location.href = "@Url.Action("Index","Home")";
                        } else if (response === "Credenciales Incorrectas") {
                            // Mostrar mensaje de error con Swal.fire
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response
                            });
                        }
                    },
                    error: function (xhr, status, error) {
                        // Mostrar mensaje de error en caso de error en la solicitud AJAX
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error al procesar la solicitud: ' + xhr.responseText + error + status
                        });
                    }
                });


            });
        });

    </script>

}

